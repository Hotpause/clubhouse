<%- include('layout', { user: user }) %>

<h2>Messages</h2>
<% if (user) { %>
<a href="/message/create">Create a New Message</a>
<% } %>
<ul>
  <% messages.forEach(message => { %>
  <li>
    <h3><%= message.title %></h3>
    <p><%= message.text %></p>
    <% if (user && user.membership_status) { %>
    <p>By: <%= message.first_name %></p>
    <p>On: <%= message.timestamp %></p>
    <% } %>
  </li>
  <% }) %>
</ul>
