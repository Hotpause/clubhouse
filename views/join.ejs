<%- include('layout', { user: user }) %>

<h2 class="text-2xl font-bold mb-4">Join the Club</h2>
<% if (error) { %>
<p class="text-red-500"><%= error %></p>
<% } %>
<form
  action="/auth/join"
  method="post"
  class="bg-white p-6 rounded shadow-md max-w-lg mx-auto"
>
  <div class="mb-4">
    <label for="passcode" class="block text-gray-700 font-bold mb-2"
      >Enter Passcode</label
    >
    <input
      type="text"
      id="passcode"
      name="passcode"
      required
      class="w-full px-3 py-2 border border-gray-300 rounded"
    />
  </div>
  <button
    type="submit"
    class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700"
  >
    Join
  </button>
</form>
