<head>
  <link href="/stylesheets/output.css" rel="stylesheet" />
</head>
<div class="container mx-auto flex justify-between items-center">
  <h1 class="text-3xl font-bold text-red-700">Clubhouse</h1>
  <nav class="flex space-x-4">
    <a href="/" class="text-lg font-semibold hover:text-gray-400">Home</a>
    <% if (user) { %>
    <a href="/message/create" class="text-lg font-semibold hover:text-gray-400"
      >Create a New Message</a
    >
    <a href="/auth/logout" class="text-lg font-semibold hover:text-gray-400"
      >Logout</a
    >
    <span class="text-lg"
      >Welcome, <%= user.first_name %> <%= user.last_name %>!</span
    >
    <% if (user.membership_status) { %>
    <span class="text-lg font-semibold text-green-500">(Member)</span>
    <% } else { %>
    <a href="/auth/join" class="text-lg font-semibold hover:text-gray-400"
      >Join the Club</a
    >
    <% } %> <% } else { %>
    <a href="/auth/login" class="text-lg font-semibold hover:text-gray-400"
      >Login</a
    >
    <a href="/auth/signup" class="text-lg font-semibold hover:text-gray-400"
      >Sign Up</a
    >
    <% } %>
  </nav>
</div>
